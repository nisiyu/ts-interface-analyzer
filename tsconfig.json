{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "typeRoots" : ["./node_modules/@types", "./src/dts"]
  },
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ],
  "types": [
    "typePatches"
  ]
}